<%- include("partials/header") %>
    <div class="container py-5 px-5">
        <div class="row">
            <div class="col-4">
                <div class="card text-center px-4 py-3">
                    <img class="mx-auto profile_img px-2 py-2" src="/images/anon_profile.jpg">
                    <h3><%= username%></h3>
                    <h5>Currently accepting/not accepting penpal requests</h5>
                    <% if (userProfileInfo.age !== null) { %>
                        <h5><%= userProfileInfo.age %> years old</h5>
                    <% } %>
                    <% if (userProfileInfo.from !== null) { %>
                        <h5>from <%= userProfileInfo.from %> </h5>
                    <% } %>
                </div>
            </div>
            <div class="col-8">
                <div class="card px-4 py-3 mb-4">
                    <h5>About Me</h5>
                    <span>
                        <%= userProfileInfo.about %>
                    </span>
                </div>
                <div class="card px-4 py-3 mb-4">
                    <h5>My interests</h5>
                    <div class="d-flex flex-row">
                        <% userProfileInfo.interests.forEach(function(interest) { %>
                            <span class="pe-2"><%= interest %></span>
                        <% }); %>
                    </div>  
                </div>
                <div class="card px-4 py-3 mb-4">
                    <h5>Languages</h5>
                    <div class="d-flex flex-row">
                        <% userProfileInfo.languages.forEach(function(lang) { %>
                            <span class="pe-2"><%= lang %></span>
                        <% }); %>
                    </div>  
                </div>
                <% if (me) { %>
                    <a class="btn btn-light" href="/edit_profile">Edit Profile</a>
                <% } %>
            </div>
        </div>
<%- include("partials/footer") %>
